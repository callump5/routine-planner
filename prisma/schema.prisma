generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  budgets   Budget[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Budget {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  type      String
  userId    Int
  amount    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
